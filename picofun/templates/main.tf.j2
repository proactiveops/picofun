variable "tags" {
  type        = map(string)
  description = "Tags to apply to all resources"
  default     = {
    {% if subnets|length > 0 %}{% for tag in tags -%}    "{{ tag }}" = "{{ tags[tag] }}",
    {% endfor %}
{% endif %}    "generated_by" = "picofun",
  }
}
{% if auth_enabled %}
variable "kms_key_arn" {
  type        = string
  description = "ARN of an existing KMS key to use for encrypting SSM parameters. If not provided, a new key will be created."
  default     = null
}

variable "auth_credentials_ttl" {
  type        = number
  description = "TTL in seconds for caching authentication credentials in Lambda memory"
  default     = {{ auth_ttl }}
}
{% endif %}

locals {

  lambda_layer_path = "${local.temp_path}/lambda_layer_{{ namespace }}"
  temp_path         = "${path.root}/.terraform/tmp"

  layers = [
  {% for layer in layers -%}
    "{{ layer }}",
  {% endfor %}
    aws_lambda_layer_version.this.arn,
  ]

  functions = [
  {% for lambda in lambdas -%}    "{{ lambda }}",
  {% endfor %}]
{% if subnets|length > 0 %}
  subnet_ids = [
  {% for subnet in subnets -%}    "{{ subnet }}",
  {% endfor %}]
{% endif %}{% if auth_enabled %}
  kms_key_arn = var.kms_key_arn != null ? data.aws_kms_key.existing[0].arn : aws_kms_key.this[0].arn
{% endif %}
}
{% if auth_enabled %}
data "aws_kms_key" "existing" {
  count = var.kms_key_arn != null ? 1 : 0

  key_id = var.kms_key_arn
}

resource "aws_kms_key" "this" {
  count = var.kms_key_arn == null ? 1 : 0

  description             = "KMS key for picorun {{ namespace }} SSM parameter encryption"
  deletion_window_in_days = 10
  enable_key_rotation     = true

  tags = var.tags
}

resource "aws_kms_alias" "this" {
  count = var.kms_key_arn == null ? 1 : 0

  name          = "alias/picorun-{{ namespace }}"
  target_key_id = aws_kms_key.this[0].key_id
}

resource "aws_ssm_parameter" "credentials" {
  name        = "/picorun/{{ namespace }}/credentials-{{ auth_scheme_type }}"
  description = "Credentials for {{ auth_scheme_name }} authentication"
  type        = "SecureString"
  key_id      = local.kms_key_arn
  value       = jsonencode({})

  lifecycle {
    ignore_changes = [value]
  }

  tags = var.tags
}
{% endif %}
{% if subnets|length > 0 %}
resource "aws_security_group" "lambda" {
  name        = "pf-{{ namespace }}-lambdas"
  description = "Security group for pf-{{ namespace }} lambda functions"
  vpc_id      = "{{ vpc_id }}"

  tags = var.tags
}
{% endif %}
resource "null_resource" "layer" {
  provisioner "local-exec" {
    command = <<EOT
      rm -rf ${local.lambda_layer_path}
      mkdir -p ${local.lambda_layer_path}/python
      cp -a ${path.module}/layer/. ${local.lambda_layer_path}/python
      cd ${local.lambda_layer_path}/python
      uv pip install . --target .
    EOT
  }

  triggers = {
    always_run = timestamp()
  }
}

data "archive_file" "layer" {
  source_dir  = local.lambda_layer_path
  output_path = "${local.temp_path}/layer_{{ namespace }}.zip"
  type        = "zip"

  depends_on = [null_resource.layer]
}

resource "aws_lambda_layer_version" "this" {
  filename            = data.archive_file.layer.output_path
  layer_name          = "{{ namespace }}"
  source_code_hash    = data.archive_file.layer.output_base64sha256

  compatible_runtimes      = ["python3.13"]
  compatible_architectures = ["arm64"]

  depends_on = [data.archive_file.layer]

  lifecycle {
    create_before_destroy = true
  }
}

data "archive_file" "lambda" {
  for_each = toset(local.functions)

  source_file = "${path.module}/lambdas/${each.value}.py"
  output_path = "${local.temp_path}/lambda_${each.value}.zip"
  type        = "zip"
}

resource "aws_lambda_function" "this" {
  for_each = toset(local.functions)

  filename         = data.archive_file.lambda[each.value].output_path
  function_name    = "{{ namespace }}_${each.value}"
  role             = aws_iam_role.lambda.arn
  architectures    = ["arm64"]
  handler          = "${each.value}.handler"
  runtime          = "python3.13"
  source_code_hash = data.archive_file.lambda[each.value].output_base64sha256
  timeout          = 10
  layers           = local.layers
{% if auth_enabled %}
  environment {
    variables = {
      PICORUN_CREDENTIALS_TTL = var.auth_credentials_ttl
    }
  }
{% endif %}{% if subnets|length > 0 %}
  vpc_config {
      security_group_ids = [aws_security_group.lambda.id]
      subnet_ids         = [for subnet in local.subnet_ids: subnet]
  }
{% endif %}
{% if xray_tracing %}
  tracing_config {
    mode = "Active"
  }
{% endif %}
  tags = var.tags
}

resource "aws_iam_role" "lambda" {
  name = "{{ iam_role_prefix }}{{ namespace }}"

  assume_role_policy   = data.aws_iam_policy_document.lambda_assume_role.json
  permissions_boundary = {{ '"{}"'.format(role_permissions_boundary) if role_permissions_boundary else "null" }}

  tags = var.tags
}

data "aws_iam_policy_document" "lambda_assume_role" {
  statement {
    actions = ["sts:AssumeRole"]
    effect  = "Allow"
    principals {
      identifiers = ["lambda.amazonaws.com"]
      type        = "Service"
    }
  }
}

resource "aws_iam_role_policy_attachment" "lambda_basic_execution" {
  policy_arn = "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
  role       = aws_iam_role.lambda.name
}
{% if auth_enabled %}
data "aws_iam_policy_document" "lambda_auth" {
  statement {
    actions   = ["ssm:GetParameter"]
    resources = ["arn:aws:ssm:*:*:parameter/picorun/{{ namespace }}/credentials-*"]
  }

  statement {
    actions   = ["kms:Decrypt"]
    resources = [local.kms_key_arn]
  }
}

resource "aws_iam_policy" "lambda_auth" {
  name        = "{{ namespace }}_lambda_auth"
  description = "Permissions for {{ namespace }} Lambda functions to access authentication credentials"
  policy      = data.aws_iam_policy_document.lambda_auth.json

  tags = var.tags
}

resource "aws_iam_role_policy_attachment" "lambda_auth" {
  policy_arn = aws_iam_policy.lambda_auth.arn
  role       = aws_iam_role.lambda.name
}
{% endif %}
{% if subnets|length > 0 %}
resource "aws_iam_role_policy_attachment" "lambda_eni_management" {
  policy_arn = "arn:aws:iam::aws:policy/service-role/AWSLambdaENIManagementAccess"
  role       = aws_iam_role.lambda.name
}
{% endif %}
{% if xray_tracing %}
resource "aws_iam_role_policy_attachment" "lambda_xray" {
  policy_arn = "arn:aws:iam::aws:policy/AWSXRayDaemonWriteAccess"
  role       = aws_iam_role.lambda.name
}
{% endif %}
#tfsec:ignore:aws-cloudwatch-log-group-customer-key Not logging sensitive data, so CMK is not required
resource "aws_cloudwatch_log_group" "lambda" {
  for_each = toset(local.functions)

  name = "/aws/lambda/${aws_lambda_function.this[each.key].function_name}"

  retention_in_days = 14

  tags = var.tags
}

output "lambda_function_arns" {
  description = "ARNs of the lambda functions"
  value       = [for l in aws_lambda_function.this : l.arn]
}

output "iam_role_arn" {
  description = "ARN of the IAM role used by the lambda functions"
  value       = aws_iam_role.lambda.arn
}